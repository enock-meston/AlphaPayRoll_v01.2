@layout GrhLayout
@page "/Promotion/TRH05PromotionPage/{id}"
@inherits TRH05PromotionBase


<div class="alert alert-dark mt-0 col-sm-12 cacherImpression" role="alert" style="text-align: center; width: 100%; background-color: steelblue; margin: 2px">

    <div class="col-sm-12 text-center">
        <h4 style="color:yellow" Font="Courier New">Promotion </h4>
    </div>
</div>

@if (osessionService != null)
{
@if (isLoading)
{
    <p><em>Loading...</em></p>
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-danger" role="status">
            <span class="sr-only">Loading ...</span>
        </div>
    </div>
}

@if (!isLoading && !AgentSelected)

{

    @* ========== SEARCH SECTION - COMPACT ========== *@
    <div class="alert" role="alert" style="background-color:#d5d5d8;border-block-color: gray">
        @* <EditForm Model="@oOneTRH02Agent"> *@
        <div class="row g-2 align-items-center">

            <div class="col-sm-2">
                <label class="form-label">MATRICULE</label>
            </div>

            <div class="col-md-2">
                <input class="form-control "
                       @bind="@sMatricule"
                       placeholder="Enter matricule" />
            </div>

            <div class="col-sm-2">
                <button type="button"
                        class="btn btn-primary"
                        @onclick="searchByMatricule" style="width:100%">
                    Rechercher
                </button>
            </div>


            <div class="col-md-4">
                <input class="form-control "
                       @bind="@sNomPrenom" style="width:100%">
            </div>

            <div class="col-sm-2">
                <button type="button" class="btn  btn-dark"
                        @onclick="GoBack" style="width:100%">
                    ← Retour
                </button>
            </div>

        </div>
        @* </EditForm> *@
    </div>

    <div class="row col-sm-12">

        <div class="col-sm-2">
            <button type="button" class="btn btn-sm btn-success" @onclick="(() => EditData(oOneCotrat, 1))" style="width:100%;opacity:0.8" disabled="@bAddDisabled">Ajouter </button>
        </div>

    </div>


    <div class="row col-sm-12">
        <table class="table  table-bordered  table-light DataGrid">
            <thead>
                <tr>
                    <th>Matricule</th>
                    <th>Ancien Poste</th>
                    <th>Nouveau Poste</th>
                    <th style="width:30%; text-align:center">Actions</th>
                    <th></th>  <!-- For Validated column -->
                    @if (id != "1")
                    {
                        <th></th>  <!-- For Suite column -->
                    }
                </tr>
            </thead>
            <tbody>

                @if (oTRH05PromotionList != null)
                {
                    @for (int i = 0; i < oTRH05PromotionList.Count; i++)
                    {
                        var item = oTRH05PromotionList[i];
                        <tr class="@getRowColor(i)">
    <td>@item.Matricule</td>
    <td>@GetFunctionName(oSelectedAffectaction.FunctionID)</td>
    <td>@item.NewPostID</td>

    <!-- Actions Column -->
    <td style="text-align:center;">
        <div class="btn-group" style="gap:4px;">
            <button @onclick="() => EditData(item, 0)" class="btn btn-sm btn-outline-info">Detail</button>
            <button @onclick="() => EditData(item, 2)" class="btn btn-sm btn-outline-info">Modifier</button>
            <button @onclick="() => EditData(item, 3)" class="btn btn-sm btn-outline-danger">Supprimer</button>
            @* <button @onclick="() => EditData(item, 0)" class="btn btn-sm btn-outline-warning">Change Loc</button>
            <button @onclick="() => EditData(item, 0)" class="btn btn-sm btn-outline-warning">Change Cont</button> *@
        </div>
    </td>

    <!-- Validation Column -->
    @if (item.ValidOn != null)
    {
        <td class="text-success" style="text-align:center;">Validé</td>
    }
    else
    {
        <td style="text-align:center;">
            <button @onclick="() => ValidateData(item.ID)" class="btn btn-sm btn-outline-success">Validation</button>
        </td>
    }

    <!-- Suite Column -->
    @if (id != "1")
    {
        <td style="text-align:center;">
            <button @onclick="() => DonAgentSuite(item)" class="btn btn-sm btn-outline-danger">Suite</button>
        </td>
    }
</tr>

                    }
                }

            </tbody>


        </table>
    </div>

}

@if (popup)
{
    <div class="modal" tabindex="-1" style="display:block">
        <div class="modal-dialog modal-xl modalDialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="row col-sm-12">
                        <div class="col-sm-2">
                        </div>
                        <div class="col-sm-6">
                            <h5 style="color:black">@modalTitle </h5>
                        </div>
                        <div class="col-sm-2">
                            @if (iTypeAction != 0)
                            {
                                <button type="button" class=@StyleButton @onclick="(() => SaveContrat(oOneCotrat))" style="width:100%">@ButtonCaption</button>
                            }
                        </div>
                        <div class="col-sm-2">
                            <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" @onclick="ClosePopUp" style="width:100%;opacity:0.8">Fermer</button>
                        </div>
                    </div>
                </div>
                <div class="modal-body ">
                    <EditForm Model="oOneCotrat">
                        <div class="well well-sm pre-scrollable modalBody">

                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Employé</label>
                                </div>
                                <div class="col-sm-2">
                                    <InputText class="form-control" @bind-Value="oOneCotrat.Matricule" Readonly=true />
                                </div>

                                <div class="col-sm-4">
                                    <InputText class="form-control" @bind-Value="@sNomPrenom" Readonly=true />
                                </div>
                                <div class="col-sm-2">
                                    <label class="form-text text-left">Nom Employé</label>
                                </div>
                            </div>

                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Ancien Post</label>
                                </div>
                                <div class="col-sm-3">
                                    @* <InputText class="form-control" @bind-Value="oOneCotrat.OldPostID" /> *@
                                        @* <InputText class="form-control" @bind-Value="oSelectedAffectaction.Fonction" ReadOnly="true" /> *@
                                        <input class="form-control"
                                               value="@GetFunctionName(oSelectedAffectaction.FunctionID)"
                                               readonly />
                                </div>
                                <div class="col-sm-3">
                                    @* <InputText class="form-control" @bind-Value="oOneCotrat.NewPostID" /> *@

                                    <InputSelectNumber class="form-control " @bind-Value="oOneCotrat.NewPostID">
                                        <option value="0"> ----------------------- </option>
                                        @if (oTCl550FonctionList != null)
                                        {
                                            @foreach (var item in oTCl550FonctionList)
                                            {
                                                <option value="@item.RICode"> @item.Descript </option>
                                            }
                     
                                        }
                                    </InputSelectNumber>
                                
                                
                                </div>

                                <div class="col-sm-2">
                                    <label class="form-text text-left">Nouveau Poste</label>
                                </div>
                            </div>

                           

                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Raison</label>
                                </div>
                                <div class="col-sm-6">
                                    <InputTextArea class="form-control" rows="5" @bind-Value="oOneCotrat.Raison" />
                                </div>
                            </div>

                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Observations</label>
                                </div>
                                <div class="col-sm-6">
                                    <InputTextArea class="form-control" rows="5" @bind-Value="oOneCotrat.Observations" />
                                </div>
                            </div>

                            @* data part *@

                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Créé par</label>
                                </div>
                                <div class="col-sm-3">

                                    <InputSelectNumber class="form-control " @bind-Value="oOneCotrat.CreatBy" Readonly=false>
                                        <option value="0"> ----------------------- </option>
                                        @if (oTCl550UserList != null)
                                        {
                                            @foreach (var item in oTCl550UserList)
                                            {
                                                <option value="@item.ID"> @item.UserName </option>
                                            }
                       }
                                        }
                                        }
                                    </InputSelectNumber>

                                </div>


                                <div class="col-sm-3">
                                    <InputDate class="form-control" @bind-Value="oOneCotrat.CreatOn" Readonly=true />
                                </div>

                                <div class="col-sm-2">
                                    <label class="form-text text-left">Date création</label>
                                </div>
                            </div>


                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Modifié par</label>
                                </div>
                                <div class="col-sm-3">

                                    <InputSelectNumber class="form-control " @bind-Value="oOneCotrat.LModifBy" Readonly=false>
                                        <option value="0"> ----------------------- </option>
                                        @if (oTCl550UserList != null)
                                        {
                                            @foreach (var item in oTCl550UserList)
                                            {
                                                <option value="@item.ID"> @item.UserName </option>
                                            }
                       
                                        }
                                    </InputSelectNumber>

                                </div>

                                <div class="col-sm-3">
                                    <InputDate class="form-control" @bind-Value="oOneCotrat.LModifOn" Readonly=true />
                                </div>

                                <div class="col-sm-2">
                                    <label class="form-text text-left">Date modification</label>
                                </div>


                            </div>
                            @* end of date part *@

                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                        </div>

                    </EditForm>
                </div>
            </div>
            <div class="modal-footer" style="height:1px">
            </div>
        </div>
    </div>
}
}
