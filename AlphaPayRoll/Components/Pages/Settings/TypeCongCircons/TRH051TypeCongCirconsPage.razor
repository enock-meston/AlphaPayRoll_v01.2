@layout GcongLayout
@page "/settings/TypeCongCircons/TRH051TypeCongCirconsPage/{id}"

@inherits TRH051TypeCongCirconsBase

<div class="alert alert-dark mt-0 col-sm-12 cacherImpression" role="alert" style="text-align: center; width: 100%; background-color: steelblue; margin: 2px">

    <div class="col-sm-12 text-center">
        <h4 style="color:yellow" Font="Courier New"> Type Conge Circonstance Page</h4>
    </div>
</div>


@if (osessionService != null)
{
    @if (isLoading)
    {
        <p><em>Loading...</em></p>
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-danger" role="status">
                <span class="sr-only">Loading ...</span>
            </div>
        </div>
    }

    <br />


    @if (!isLoading)
    {
        <div class="row col-sm-12">

            <div class="col-sm-2">
                <button type="button" class="btn btn-sm btn-success" @onclick="(() => EditData(oOneTRH051TypeCongCircons, 1))" style="width:100%;opacity:0.8" >Ajouter </button>
            </div>

        </div>


        <div class="row col-sm-12">
            <table class="table  table-bordered  table-light DataGrid">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>RICode</th>
                        <th>Description</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @if (oTRH051TypeCongCirconsList != null)
                    {
                        @for (int i = 0; i < oTRH051TypeCongCirconsList.Count; i++)
                        {

                            var item = oTRH051TypeCongCirconsList[i];
                            <tr class="@getRowColor(i)">

                                <td>@item.ID </td>
                                <td>@item.RICode</td>
                                <td>@item.Descript</td>
                                <td style="text-align:center;width:7%"> <button @onclick="(() => EditData(item, 0))" class="btn btn-sm btn-outline-info" style="width:100%">Detail</button>  </td>
                                <td style="text-align:center;width:7%"> <button @onclick="(() => EditData(item, 2))" class="btn btn-sm btn-outline-info" style="width:100%">Modifier</button>  </td>
                                <td style="text-align:center;width:7%"> <button @onclick="(() => EditData(item, 3))" class="btn btn-sm btn-outline-danger" style="width:100%">Supprimer</button>  </td>

                            </tr>
                        }
                    }
                </tbody>


            </table>
        </div>

    }
    @if (popup)
    {
        <div class="modal" tabindex="-1" style="display:block">
            <div class="modal-dialog modal-xl modalDialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="row col-sm-12">
                            <div class="col-sm-3">
                            </div>
                            <div class="col-sm-4">
                                <h5 style="color:black">@modalTitle </h5>
                            </div>
                            <div class="col-sm-2">
                                @if (iTypeAction != 0)
                                {
                                    <button type="button" class=@StyleButton @onclick="(() => SaveDepart(oOneTRH051TypeCongCircons))" style="width:100%">@ButtonCaption</button>
                                }
                            </div>
                            <div class="col-sm-2">
                                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" @onclick="ClosePopUp" style="width:100%;opacity:0.8">Fermer</button>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body ">
                        <EditForm Model="oOneTRH051TypeCongCircons">
                            <div class="well well-sm pre-scrollable modalBody">


                                <div class="row col-sm-12">
                                    <div class="col-sm-4">
                                        <label class="form-text text-right">RICode</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <InputText class="form-control" @bind-Value="oOneTRH051TypeCongCircons.RICode" />
                                    </div>
                                    <div class="col-sm-3">
                                        <InputNumber class="form-control" @bind-Value="oOneTRH051TypeCongCircons.OrdNum " />
                                    </div>
                                    <div class="col-sm-2">
                                        <label class="form-text text-left"> Ord Num</label>
                                    </div>
                                </div>


                                 <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Description</label>
                                </div>
                                <div class="col-sm-6">
                                    <InputTextArea class="form-control" @bind-Value="oOneTRH051TypeCongCircons.Descript" rows="5" />
                                </div>
   
                            </div>
                                <div class="row col-sm-12">
                                    <div class="col-sm-4">
                                        <label class="form-text text-right">Créé par</label>
                                    </div>
                                    <div class="col-sm-3">

                                        <InputSelectNumber class="form-control " @bind-Value="oOneTRH051TypeCongCircons.CreatBy" Readonly=false>
                                            <option value="0"> ----------------------- </option>
                                            @if (oTCl550UserList != null)
                                            {
                                                @foreach (var item in oTCl550UserList)
                                                {
                                                    <option value="@item.ID"> @item.UserName </option>
                                                }
                           }
                                            }
                                            }
                                        </InputSelectNumber>

                                    </div>


                                    <div class="col-sm-3">
                                        <InputDate class="form-control" @bind-Value="oOneTRH051TypeCongCircons.CreatOn" Readonly=true />
                                    </div>

                                    <div class="col-sm-2">
                                        <label class="form-text text-left">Date création</label>
                                    </div>
                                </div>


                                <div class="row col-sm-12">
                                    <div class="col-sm-4">
                                        <label class="form-text text-right">Modifié par</label>
                                    </div>
                                    <div class="col-sm-3">

                                        <InputSelectNumber class="form-control " @bind-Value="oOneTRH051TypeCongCircons.LModifBy" Readonly=false>
                                            <option value="0"> ----------------------- </option>
                                            @if (oTCl550UserList != null)
                                            {
                                                @foreach (var item in oTCl550UserList)
                                                {
                                                    <option value="@item.ID"> @item.UserName </option>
                                                }
                           }
                                            }
                                            }
                                        </InputSelectNumber>

                                    </div>

                                    <div class="col-sm-3">
                                        <InputDate class="form-control" @bind-Value="oOneTRH051TypeCongCircons.LModifOn" Readonly=true />
                                    </div>

                                    <div class="col-sm-2">
                                        <label class="form-text text-left">Date modification</label>
                                    </div>
                                </div>

                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />


                            </div>
                        </EditForm>
                    </div>
                </div>
                <div class="modal-footer" style="height:1px">
                </div>
            </div>
        </div>
    }
}


