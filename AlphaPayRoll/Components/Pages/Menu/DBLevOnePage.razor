@page "/Menu/DBLevOnePage"
@inherits DBLevOnePageBase



<div class="row col-sm-12">
    <div class="col-sm-6">
        @*<h5>@osessionService.MenuName</h5>*@
    </div>
    <div class="col-sm-4">

    </div>
    <div class="col-sm-2">
        @*<button class="btn btn-outline-primary btn-sm " @onclick="(()=>ShowPopUp(1))" style="width:130%">Ajouter</button>*@
    </div>
</div>


@if (osessionService.IsLogged)
{
    @if (oMenuAffichageList == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {


        @*<h4>@oMenuAffichageList[0].PageRoute.Trim()+@oMenuAffichageList[0].ID.ToString()</h4>*@

        <div class="row col-sm-12  pre-scrollable well" style=" max-height: 65vh;">
            <table class="table  table-bordered  DataGrid table-light">
                <thead>
                    <tr>

                        <th>S.N.</th>
                        <th>Sub Menus</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < oMenuAffichageList.Count; i++)
                    {
                        var item = oMenuAffichageList[i];
                        <tr class="@getRowColor(i)">
                            <td>@item.Numero</td>
                            <td>@item.Descript</td>
                            <td style="text-align:center;width:5%"> <a href="@(@item.PageRoute.Trim()+$"/{@item.ID}")" class="btn btn-sm btn-outline-secondary" style="width:100%">Display</a>  </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

else
{



    <div class="alert alert-danger mt-4" role="alert" style="text-align:center">

        <h4>YOU ARE NOTE CONNECTED TO APPLICATION : PLEASE LOGIN </h4>

    </div>
}

