@page "/Menu/FonctionsMenuPage/{id}"
@inherits FonctionsMenuPageBase
<div class="row col-sm-12">

    <div class="col-sm-1">
    </div>
    <div class="col-sm-11">
        <h4>@osessionService.MenuName</h4>
    </div>

</div>

<br />

@if (osessionService.IsLogged)
{
    @if (oSubMenuList == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {


        @if (isLoading)
        {
            <p><em>Loading...</em></p>
            <div class="d-flex justify-content-center">
                <div class="spinner-border text-danger" role="status">
                    <span class="sr-only">Loading ...</span>

                </div>
            </div>


        }

        else
        {


            <div class="row col-sm-12  pre-scrollable well" style=" max-height: 80vh;">

                <div class="col-sm-1">
                </div>
                <div class="col-sm-10">
                    <table class="table  table-bordered  DataGrid table-light" style="font-family: Arial">
                        <thead>
                            <tr>
                                <th>Sub Menus</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < oSubMenuList.Count; i++)
                            {
                                var item = oSubMenuList[i];
                                <tr class="@getRowColor(i)">

                                    <td>@item.Descript</td>

                                    <td style="text-align:center;width:5%"> <a href="@(item.PageRoute.Trim()+$"/{@item.ID}")" @onclick="(()=>NomMenu(item))" class="btn btn-sm btn-outline-secondary">Display</a>  </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-1">
                </div>
            </div>

            @if (osessionService.MenuName == "Transactions")
            {
                <br />
                <hr style="height:2.5px;border-width:0;color:#6378f8;background-color:#6378f8;">
                <br />

                <div class="row">
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-4">

                        <button type="button" class="btn  btn-danger"  style="width:100%">Centraliser transactions</button>

                    </div>
                    <div class="col-sm-4">
                    </div>
                </div>
            }
        }
    }



}

else
{

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

}
