@layout GrhLayout
@page "/HumanResource/TRH04FAUTEPage"
@inherits TRH04FAUTEPageBase

<div class="alert alert-dark mt-0 col-sm-12 cacherImpression" role="alert" style="text-align: center; width: 100%; background-color: steelblue; margin: 2px">

    <div class="col-sm-12 text-center">
        <h4 style="color:yellow" Font="Courier New">Faute </h4>
    </div>

</div>

@if (osessionService != null)
{


@if (isLoading)
{
    <p><em>Loading...</em></p>
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-danger" role="status">
            <span class="sr-only">Loading ...</span>
        </div>
    </div>
}

@if (!isLoading && !AgentSelected)

{
   


    <div class="alert " role="alert" style="background-color:#d5d5d8;border-block-color: gray">
       @*  <EditForm Model="@oOneTRH02Agent"> *@
            <div class="row g-2 align-items-center">

                <div class="col-sm-2">
                    <label class="form-label">MATRICULE</label>
                </div>

                <div class="col-md-2">
                    <input class="form-control "
                       @bind="@sMatricule"
                               placeholder="Enter matricule" />
                </div>

                <div class="col-sm-2">
                    <button type="button"
                            class="btn btn-primary"
                            @onclick="searchByMatricule" style="width:100%">
                        Rechercher
                    </button>
                </div>


                <div class="col-md-4">
                    <input class="form-control "
                       @bind="@sNomPrenom" style="width:100%">
                </div>

                <div class="col-sm-2">
                    <button type="button" class="btn  btn-dark"
                        @onclick="GoBack" style="width:100%">
                        ← Retour
                    </button>
                </div>

            </div>
        @* </EditForm> *@
    </div>



    <div class="row col-sm-12">

        <div class="col-sm-2">
            <button type="button" class="btn btn-sm btn-success" @onclick="(() => EditData(oOneAmount, 1))" style="width:100%;opacity:0.8" disabled="@bAddDisabled">Ajouter</button>
        </div>

    </div>

 

<div class="row col-sm-12"></div>

<div class="col-md-12 card">
    <table class="table  table-bordered  DataGrid table-light">
        <thead>
            <tr>

                <th style="color:crimson;font-size:18px">Faute ID</th>


                <th>Matricule   </th>
                <th>Tp FauteID   </th>
                <th>GraviteID   </th>
                <th>DateFaute   </th>
                <th>LieuFaute   </th>
                <th>Descript    </th>
                <th>Observation </th>

                <th></th>
                <th></th>
                <th></th>

            </tr>

        </thead>
        <tbody>

                @if (oTRH04FAUTEList != null)
            {
                    @for (int i = 0; i < oTRH04FAUTEList.Count; i++)
                {
                        var item = oTRH04FAUTEList[i];
                    <tr class="@getRowColor(i)">

                        <td style="color: crimson; font-size: 18px">@item.ID</td>

                        <td>@item.Matricule    </td>
                        <td>@item.TpFauteID    </td>
                        <td>@item.GraviteID    </td>
                        <td>@item.DateFaute    </td>
                        <td>@item.LieuFaute    </td>
                        <td>@item.Descript     </td>
                        <td>@item.Observation  </td>

                        <td style="text-align:center;width:7%"> <button @onclick="(() => EditData(item, 0))" class="btn btn-sm btn-outline-info" style="width:100%">Detail</button>  </td>
                        <td style="text-align:center;width:7%"> <button @onclick="(() => EditData(item, 2))" class="btn btn-sm btn-outline-success" style="width:100%">Modifier</button>  </td>
                                <td style="text-align:center;width:7%"> <button @onclick="(() => EditData(item, 3))" class="btn btn-sm btn-outline-danger" style="width:100%">Supprimer</button>  </td>

                    </tr>
                }}
        </tbody>
    </table>
</div>

}
@if (popup)
{

    <div class="modal" tabindex="-1" style="display: inline-block ">
        <div class="modal-dialog modal-xl modalDialog" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <div class="row col-sm-12">
                        <div class="col-sm-3">
                        </div>

                        <div class="col-sm-5">
                            <h5 style="color:black">Faute Detail</h5>
                        </div>



                        <div class="col-sm-2">
                            @if (iTypeAction != 0)
                            {
                                <button type="button" class=@StyleButton @onclick="(() => SaveDocVal(oOneAmount))" style="width:100%">@ButtonCaption</button>
                            }


                        </div>


                        <div class="col-sm-2">
                            <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" @onclick="ClosePopUp" style="width:100%;opacity:0.8">Fermer</button>
                        </div>
                    </div>
                </div>
                <div class="modal-body ">

                    <EditForm Model="oOneAmount">
                        <div class="well well-sm pre-scrollable modalBody">

                            <div class="row col-sm-12">

                                <div class="col-sm-4">
                                    <label class="form-text text-right">Matricule </label>
                                </div>

                                <div class="col-sm-2">
                                        <InputText class="form-control" @bind-Value="@sMatricule" Readonly=true />
                                </div>
                                <div class="col-sm-4">
                                        <InputText class="form-control" @bind-Value="@sNomPrenom" Readonly=true />
                                </div>
                                <div class="col-sm-2">
                                    <label class="form-text text-left">Nom </label>
                                </div>

                            </div>


                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Type Faute</label>
                                </div>
                                <div class="col-sm-3">
                                    <InputSelectNumber class="form-control" @bind-Value="oOneAmount.TpFauteID">
                                        <option value="0"> ----------------------- </option>
                                        @if (oTRH055FAUTEList != null)
                                        {
                                            @foreach (var item in oTRH055FAUTEList)
                                            {
                                                <option value="@item.ID"> @item.Descript </option>
                                            }
                                        }
                                    </InputSelectNumber>
                                </div>
                                   
                                    <div class="col-sm-3">
                                        <InputSelectNumber class="form-control" @bind-Value="oOneAmount.GraviteID">
                                            <option value="0"> ----------------------- </option>
                                            @if (oTRH042GraviteList != null)
                                            {
                                                @foreach (var item in oTRH042GraviteList)
                                                {
                                                    <option value="@item.ID"> @item.Descript </option>
                                                }
                                            }
                                        </InputSelectNumber>
                                    </div>

                                    <div class="col-sm-2">
                                        <label class="form-text text-left">Gravite</label>
                                    </div>
                                </div>

                            <div class="row col-sm-12">

                                <div class="col-sm-4">
                                    <label class="form-text text-right">Date Faute </label>
                                </div>

                                <div class="col-sm-3">
                                    <InputDate class="form-control" @bind-Value="oOneAmount.DateFaute" />
                                </div>
                                   

                                    <div class="col-sm-3">
                                        <InputText class="form-control" @bind-Value="oOneAmount.LieuFaute" />
                                    </div>

                                    <div class="col-sm-2">
                                        <label class="form-text text-left">Lieu Faute </label>
                                    </div>
                            </div>

                           


                            <div class="row col-sm-12">

                                <div class="col-sm-4">
                                    <label class="form-text text-right">Descript </label>
                                </div>

                                <div class="col-sm-6">
                                        <InputTextArea class="form-control" rows="5" @bind-Value="oOneAmount.Descript" />
                                </div>

                            </div>

                            

                           

                            <div class="row col-sm-12">

                                <div class="col-sm-4">
                                    <label class="form-text text-right">Observation </label>
                                </div>



                                <div class="col-sm-6">

                                    <InputTextArea class="form-control" rows="5" @bind-Value="oOneAmount.Observation" placeholder="" />
                                </div>

                            </div>



                                <div class="row col-sm-12">
                                    <div class="col-sm-4">
                                        <label class="form-text text-right">Créé par</label>
                                    </div>
                                    <div class="col-sm-3">

                                        <InputSelectNumber class="form-control " @bind-Value="oOneAmount.CreatBy" Readonly=false>
                                            <option value="0"> ----------------------- </option>
                                            @if (oTCl550UserList != null)
                                            {
                                                @foreach (var item in oTCl550UserList)
                                                {
                                                    <option value="@item.ID"> @item.UserName </option>
                                                }
                         
                                            }
                                        </InputSelectNumber>

                                    </div>


                                    <div class="col-sm-3">
                                        <InputDate class="form-control" @bind-Value="oOneAmount.CreatOn" Readonly=true />
                                    </div>

                                    <div class="col-sm-2">
                                        <label class="form-text text-left">Date création</label>
                                    </div>
                                </div>


                                <div class="row col-sm-12">
                                    <div class="col-sm-4">
                                        <label class="form-text text-right">Modifié par</label>
                                    </div>
                                    <div class="col-sm-3">

                                        <InputSelectNumber class="form-control " @bind-Value="oOneAmount.LModifBy" Readonly=false>
                                            <option value="0"> ----------------------- </option>
                                            @if (oTCl550UserList != null)
                                            {
                                                @foreach (var item in oTCl550UserList)
                                                {
                                                    <option value="@item.ID"> @item.UserName </option>
                                                }
                          
                                            }
                                        </InputSelectNumber>

                                    </div>

                                    <div class="col-sm-3">
                                        <InputDate class="form-control" @bind-Value="oOneAmount.LModifOn" Readonly=true />
                                    </div>

                                    <div class="col-sm-2">
                                        <label class="form-text text-left">Date modification</label>
                                    </div>


                                </div>


                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />


                        </div>

                    </EditForm>
                </div>
                <div class="modal-footer" style="height:1px">
                </div>
            </div>
        </div>
    </div>
}}