@rendermode InteractiveServer
@layout GrhLayout
@page "/Contrat/ContratPage/{id}"
@inherits ContratPageBase

<div class="alert alert-dark mt-0 col-sm-12 cacherImpression" role="alert" style="text-align: center; width: 100%; background-color: steelblue; margin: 2px">

    <div class="col-sm-12 text-center">
        <h4 style="color:yellow" Font="Courier New"> Contrat</h4>
    </div>
</div>
@if (osessionService != null)
{
@if (isLoading)
{
    <p><em>Loading...</em></p>
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-danger" role="status">
            <span class="sr-only">Loading ...</span>
        </div>
    </div>
}

@if (!isLoading && !AgentSelected)

{

    @* ========== SEARCH SECTION - COMPACT ========== *@
    <div class="alert " role="alert" style="background-color:#d5d5d8;border-block-color: gray">
        @* <EditForm Model="@oOneTRH02Agent"> *@
        <div class="row g-2 align-items-center">

            <div class="col-sm-2">
                <label class="form-label text-right">MATRICULE</label>
            </div>

            <div class="col-md-2">
                <input class="form-control "
                       @bind="@sMatricule"
                       placeholder="Enter matricule" />
            </div>

            <div class="col-sm-2">
                <button type="button"
                        class="btn btn-primary"
                        @onclick="searchByMatricule" style="width:100%">
                    Rechercher
                </button>
            </div>


            <div class="col-md-4">
                <input class="form-control "
                       @bind="@sNomPrenom" style="width:100%">
            </div>

            <div class="col-sm-2">
                <button type="button" class="btn  btn-dark"
                        @onclick="GoBack" style="width:100%">
                    ← Retour
                </button>
            </div>

        </div>
        @* </EditForm> *@
    </div>

    <div class="row col-sm-12">

        <div class="col-sm-2">
            <button type="button" class="btn btn-sm btn-success" @onclick="(() => EditData(oOneCotrat, 1))" style="width:100%;opacity:0.8" disabled="@bAddDisabled">Ajouter</button>
        </div>
         
 @*        <div class="col-sm-3">
            
        </div>

        <div class="col-sm-3">
            <button type="button" class="btn btn-sm btn-success" @onclick="(() => EditData(oOneCotrat, 1))" style="width:100%;opacity:0.8">Valider contrat</button>
        </div> *@

    </div>


    <div class="row col-sm-12">
        <table class="table  table-bordered  table-light DataGrid">
            <thead>
                <tr>

                    <th>Matricule</th>
                    <th>N0 Contrat</th>
                    <th>Date début</th>
                    <th>Note</th>
                    
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                        <th></th>
                        <th></th>

                </tr>
            </thead>
            <tbody>

                @if (oContratList != null)
                {
                    @for (int i = 0; i < oContratList.Count; i++)
                    {
                        var item = oContratList[i];
                        <tr class="@getRowColor(i)">
                            <td>@item.MATRICULE</td>
                            <td>@item.NumContrat </td>
                            <td>@item.DateDebut</td>
                            <td>@item.Notes</td>

                            <td style="text-align:center;width:7%">
                                <button @onclick="() => EditData(item, 0)" class="btn btn-sm btn-outline-info" style="width:100%">Detail</button>
                            </td>
                            <td style="text-align:center;width:7%">
                                <button @onclick="() => EditData(item, 2)" class="btn btn-sm btn-outline-info" style="width:100%">Modifier</button>
                            </td>
                            <td style="text-align:center;width:7%">
                                <button @onclick="() => EditData(item, 3)" class="btn btn-sm btn-outline-danger" style="width:100%">Supprimer</button>
                            </td>

                                @if (item.ValidBy != 0 || item.ValidOn != null)
                            {
                                <td class="text-success" style="text-align:center;width:7%">
                                        Validé
                                </td>

                                    
                                    if (item.ContractStatus == "suspended")
                                    {
                                        <td class="text-danger" style="text-align:center;width:7%">
                                            Suspendu
                                        </td>
                                    }
                                    else
                                    {
                                    @*     <td style="text-align:center;width:12%">
                                        <button @onclick="() => SuspendContract(item.ID, item.NumContrat)" class="btn btn-sm btn-outline-secondary" style="width:100%">Suspend Contr.</button>
                                    </td> *@
                                        <td class="text-success" style="text-align:center;width:7%">
                                            Actif
                                        </td>
                                    }
                                }
                            else
                            {
                                <td style="text-align:center;width:7%">
                                    <button @onclick="() => ValidateData(item.ID)"
                                            class="btn btn-sm btn-outline-success"
                                            style="width:100%">
                                        Validation
                                    </button>
                                </td>
                            }

                            @if (id != "1")
                            {
                                <td style="text-align:center;width:7%">
                                    <button @onclick="() => DonAgentSuite(item)"
                                            class="btn btn-sm btn-outline-danger"
                                            style="width:100%">
                                        Suite
                                    </button>
                                </td>
                            }
                        </tr>
                    }
                }

            </tbody>


        </table>
    </div>

}
}
@if (popup)
{
    <div class="modal" tabindex="-1" style="display:block">
        <div class="modal-dialog modal-xl modalDialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="row col-sm-12">
                        <div class="col-sm-2">
                        </div>
                        <div class="col-sm-6">
                            <h5 style="color:black">@modalTitle </h5>
                        </div>
                        <div class="col-sm-2">
                            @if (iTypeAction != 0)
                            {
                                <button type="button" class=@StyleButton @onclick="(() => SaveContrat(oOneCotrat))" style="width:100%">@ButtonCaption</button>
                            }
                        </div>
                        <div class="col-sm-2">
                            <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" @onclick="ClosePopUp" style="width:100%;opacity:0.8">Fermer</button>
                        </div>
                    </div>
                </div>
                <div class="modal-body ">
                    <EditForm Model="oOneCotrat">
                        <div class="well well-sm pre-scrollable modalBody">

                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Employé</label>
                                </div>
                                <div class="col-sm-2">
                                    <InputText class="form-control" @bind-Value="oOneCotrat.MATRICULE" Readonly=true/>
                                </div>
                               
                                <div class="col-sm-4">
                                    <InputText class="form-control" @bind-Value="@sNomPrenom" Readonly=true/>
                                </div>
                                <div class="col-sm-2">
                                    <label class="form-text text-left">Nom employé</label>
                                </div>
                            </div>
                               <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">No Contrat </label>
                                </div>
                                <div class="col-sm-6">
                                    <InputText class="form-control" @bind-Value="oOneCotrat.NumContrat" disabled=true />
                                </div>
                                </div> 

                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Statut contrat</label>
                                </div>

                                <div class="col-sm-6">

                                    <InputSelectNumber class="form-control " @bind-Value="oOneCotrat.StatusID">
                                        <option > ----------------------- </option>
                                        @if (TRH550StatusContratList != null)
                                        {
                                            @foreach (var item in TRH550StatusContratList)
                                            {
                                                <option value="@item.ID"> @item.Descript </option>
                                            }
                                        }

                                    </InputSelectNumber>
                                </div>
                             
                            </div>


                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Date Statut </label>
                                </div>
                                <div class="col-sm-6">
                                    <InputDate class="form-control" @bind-Value="oOneCotrat.DateChangStatus" disabled=true/>
                                </div>

                                
                            </div>


                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Type Contrat  </label>
                                </div>
                                <div class="col-sm-3">

                                    @* <InputSelectNumber class="form-control " @bind-Value="oOneCotrat.Categorie">
                                        <option value="0"> ----------------------- </option>
                                        @if (TRH550CategContratList != null)
                                        {
                                            @foreach (var item in TRH550CategContratList)
                                            {
                                                <option value="@item.ID"> @item.Descript </option>
                                            }                  
                                        }
                                      
                                    </InputSelectNumber> *@

                                    <InputSelectNumber class="form-control"
                                                       Value="oOneCotrat.Categorie"
                                                       ValueChanged="EventCallback.Factory.Create<int>(this, OnContractTypeChanged)"
                                                       ValueExpression="() => oOneCotrat.Categorie">

                                        <option value="0"> ----------------------- </option>

                                        @foreach (var item in TRH550CategContratList)
                                        {
                                            <option value="@item.ID">@item.Descript</option>
                                        }
                                    </InputSelectNumber>

                                </div>

                                <div class="col-sm-3">
                                    <InputText class="form-control" @bind-Value="oOneCotrat.ContraPeriod" />
                                </div>

                                <div class="col-sm-2">
                                    <label class="form-text text-left">Période Contrat </label>
                                </div>
        
                            </div>



                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Date début</label>
                                </div>
                                <div class="col-sm-6">
                                    <InputDate class="form-control" @bind-Value="oOneCotrat.DateDebut" />
                                </div>
                            </div>

 

                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Date fin Probable</label>
                                </div>
                                <div class="col-sm-6">
                                    <InputDate class="form-control" @bind-Value="oOneCotrat.DateFinProbable" disabled="true" />
                                </div>

                            </div>


                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Date fin</label>
                                </div>
                                <div class="col-sm-6">
                                    <InputDate class="form-control" @bind-Value="oOneCotrat.DateFin"  disabled="true"/>
                                </div>

                            </div>


                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Observations</label>
                                </div>
                                <div class="col-sm-6">
                                    <InputTextArea class="form-control" rows="5" @bind-Value="oOneCotrat.Notes" />
                                </div>
                            </div>

                            <br/>

                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Créé par</label>
                                </div>
                                <div class="col-sm-3">

                                    <InputSelectNumber class="form-control " @bind-Value="oOneCotrat.CreatBy" Readonly=false>
                                        <option value="0"> ----------------------- </option>
                                        @if (oTCl550UserList != null)
                                        {
                                            @foreach (var item in oTCl550UserList)
                                            {
                                                <option value="@item.ID"> @item.UserName </option>
                                            }                   }
                                        }
                                        }
                                    </InputSelectNumber>

                                </div>


                                <div class="col-sm-3">
                                    <InputDate class="form-control" @bind-Value="oOneCotrat.CreatOn" Readonly=true />
                                </div>

                                <div class="col-sm-2">
                                    <label class="form-text text-left">Date création</label>
                                </div>
                            </div>


                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Modifié par</label>
                                </div>
                                <div class="col-sm-3">

                                    <InputSelectNumber class="form-control " @bind-Value="oOneCotrat.LModifBy" Readonly=false>
                                        <option value="0"> ----------------------- </option>
                                        @if (oTCl550UserList != null)
                                        {
                                            @foreach (var item in oTCl550UserList)
                                            {
                                                <option value="@item.ID"> @item.UserName </option>
                                            }                   }
                                        }
                                        }
                                    </InputSelectNumber>

                                </div>

                                <div class="col-sm-3">
                                    <InputDate class="form-control" @bind-Value="oOneCotrat.LModifOn" Readonly=true />
                                </div>

                                <div class="col-sm-2">
                                    <label class="form-text text-left">Date modification</label>
                                </div>


                            </div>                           
                            
                            
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                        </div>

                    </EditForm>
                </div>
            </div>
            <div class="modal-footer" style="height:1px">
            </div>
        </div>
    </div>
}
