@layout GcongLayout
@page "/GcongeIndex"
@using AlphaPayRoll.Data
@using AlphaPayRoll.DataServices.GetUserCounts
@using PayLibrary.GetUserCounts



<PageTitle>Gestion congé</PageTitle>
<link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<!-- Font Awesome Free -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="container">
    <h3 class="mb-4">Mon tableau de bord </h3>
    @if (!_loaded)
    {
        <p>Loading...</p>
    }
    else
    {
        if (osessionService.RoleID == 1){
    <!-- DASHBOARD CARDS -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fa-solid fa-book"></i>
                                Total des Permission
                    </h5>


                    <h3>@HRCounts.FirstOrDefault(x => x.TableName == "TRH05Permission")?.TotalRows</h3>

                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title"> <i class="fa fa-book"></i> Conge Circonstance</h5>
                    <h3>@HRCounts.FirstOrDefault(x => x.TableName == "THRCongCircRequest")?.TotalRows</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3 shadow">
                <div class="card-body">
                            <h5 class="card-title"><i class="fa fa-leaf"></i> Total des Congé</h5>
                    <h3>@HRCounts.FirstOrDefault(x => x.TableName == "THRCongRequest")?.TotalRows</h3>

                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title"><i class="fa fa-leaf"></i> Planifier Congé</h5>
                    <h3>@HRCounts.FirstOrDefault(x => x.TableName == "THRPlanningConge")?.TotalRows</h3>
                </div>
            </div>
        </div>

       
    </div>
        }
        else
        {
            <p>No tableau de bord Done</p>
        }
    }
</div>

@code {
    [Inject]
    protected IClassGetAgentCounts ClassGetAgentCountsService { get; set; }

    List<ClassGetAgentCounts> HRCounts = new();
    public ClasSessionStorage osessionService { set; get; }

    [Inject]
    protected Blazored.SessionStorage.ISessionStorageService osessionStorage { set; get; }

    private bool _loaded = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            osessionService = await osessionStorage.GetItemAsync<ClasSessionStorage>("LogedUser");

            if (osessionService != null)
            {
                HRCounts = await ClassGetAgentCountsService.GetAgentCountsAsync(osessionService.Matricule);
            }

            _loaded = true;

            StateHasChanged();
        }
    }
}
