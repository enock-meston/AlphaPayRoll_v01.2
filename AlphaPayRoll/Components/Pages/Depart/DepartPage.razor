@layout GrhLayout
@page "/Depart/DepartPage/{id}"
@inherits DepartPageBase
<div class="alert alert-dark mt-0 col-sm-12 cacherImpression" role="alert" style="text-align: center; width: 100%; background-color: steelblue; margin: 2px">

    <div class="col-sm-12 text-center">
        <h4 style="color:yellow" Font="Courier New">Départ</h4>
    </div>
</div>
@if (osessionService != null)
{
@if (isLoading)
{
    <p><em>Loading...</em></p>
    <div class="d-flex justify-content-center">
        <div class="spinner-border text-danger" role="status">
            <span class="sr-only">Loading ...</span>
        </div>
    </div>
}

<br/>


@if (!isLoading && !AgentSelected)
{
    <div class="alert " role="alert" style="background-color:#d5d5d8;border-block-color: gray">
        @*  <EditForm Model="@oOneTRH02Agent"> *@
        <div class="row g-2 align-items-center">

            <div class="col-sm-2">
                <label class="form-label ">MATRICULE</label>
            </div>

            <div class="col-md-2">
                <input class="form-control "
                       @bind="@sMatricule"
                       placeholder="Enter matricule" />
            </div>

            <div class="col-sm-2">
                <button type="button"
                        class="btn btn-primary"
                        @onclick="searchByMatricule" style="width:100%">
                    Rechercher
                </button>
            </div>


            <div class="col-md-4">
                <input class="form-control "
                       @bind="@sNomPrenom" style="width:100%">
            </div>

            <div class="col-sm-2">
                <button type="button" class="btn  btn-dark"
                        @onclick="GoBack" style="width:100%">
                    ← Retour
                </button>
            </div>

        </div>
        @* </EditForm> *@
    </div>



    <div class="row col-sm-12">

        <div class="col-sm-2">
            <button type="button" class="btn btn-sm btn-success" @onclick="(() => EditData(oOneDepart, 1))" style="width:100%;opacity:0.8" disabled="@bAddDisabled">Ajouter </button>
        </div>

    </div>


    <div class="row col-sm-12">
        <table class="table  table-bordered  table-light DataGrid">
            <thead>
                <tr>
                    <th>Matricule</th>
                    <th>Noms</th>
                    <th>Date départ</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @if (oDepartList != null)
                {
                    @for (int i = 0; i < oDepartList.Count; i++)
                    {

                        var item = oDepartList[i];
                        <tr class="@getRowColor(i)">

                            <td>@item.Matricule</td>
                            <td>@item.Names</td>
                            <td>@item.MotifDepart</td>
                            <td>@item.DateDepart</td>
                            <td style="text-align:center;width:7%"> <button @onclick="(() => EditData(item, 0))" class="btn btn-sm btn-outline-info" style="width:100%">Detail</button>  </td>
                            <td style="text-align:center;width:7%"> <button @onclick="(() => EditData(item, 2))" class="btn btn-sm btn-outline-info" style="width:100%">Modifier</button>  </td>
                                <td style="text-align:center;width:7%"> <button @onclick="(() => EditData(item, 3))" class="btn btn-sm btn-outline-danger" style="width:100%">Supprimer</button>  </td>

                            @if (item.ValidOn != null)
                            {
                                <td class="text-success" style="text-align:center;width:7%">
                                        Validé
                                </td>
                            }
                            else
                            {
                                <td style="text-align:center;width:7%">
                                    <button @onclick="() => ValidateData(item.ID)"
                                            class="btn btn-sm btn-outline-success"
                                            style="width:100%">
                                        Validation
                                    </button>
                                </td>
                            }
                        </tr>
                    }
                }
            </tbody>


        </table>
    </div>

}
@if (popup)
{
    <div class="modal" tabindex="-1" style="display:block">
        <div class="modal-dialog modal-xl modalDialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="row col-sm-12">
                        <div class="col-sm-3">
                        </div>
                        <div class="col-sm-4">
                            <h5 style="color:black">@modalTitle </h5>
                        </div>
                        <div class="col-sm-2">
                            @if (iTypeAction != 0)
                            {
                                <button type="button" class=@StyleButton @onclick="(() => SaveDepart(oOneDepart))" style="width:100%">@ButtonCaption</button>
                            }
                        </div>
                        <div class="col-sm-2">
                            <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal" @onclick="ClosePopUp" style="width:100%;opacity:0.8">Fermer</button>
                        </div>
                    </div>
                </div>
                <div class="modal-body ">
                    <EditForm Model="oOneDepart">
                        <div class="well well-sm pre-scrollable modalBody">

                          
                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Matricule</label>
                                </div>
                                <div class="col-sm-2">
                                    <InputText class="form-control" @bind-Value="@sMatricule" Readonly="true" />
                                 </div>
                                <div class="col-sm-4">
                                    <InputText class="form-control" @bind-Value="@sNomPrenom" Readonly="true" />
                                </div>
                                <div class="col-sm-2">
                                        <label class="form-text text-left">Nom Employé</label>
                                </div>
                            </div>
                    
                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Date embauche</label>
                                </div>
                                <div class="col-sm-3">
                                    <InputDate class="form-control" @bind-Value="oOneDepart.DateEmbauche" Readonly="true" />
                                </div>
                                <div class="col-sm-3">
                                    <InputDate class="form-control" @bind-Value="oOneDepart.DateDepart" />
                                </div>
                                <div class="col-sm-2">
                                    <label class="form-text text-left">Date départ</label>
                                </div>
                             </div>

                              <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Motif départ</label>
                                </div>
                                <div class="col-sm-6">


                                    <InputSelectNumber class="form-control " @bind-Value="oOneDepart.MotifDepartID" >
                                        <option value="0"> ----------------------- </option>
                                        @if (oTCl550MotifDepart != null)
                                        {
                                            @foreach (var item in oTCl550MotifDepart)
                                            {
                                                <option value="@item.ID"> @item.Descript  </option>
                                            }                   }
                                        }
                                        }
                                    </InputSelectNumber>
                                </div>

                            </div>


                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Observations</label>
                                </div>
                                <div class="col-sm-6">
                                    <InputTextArea class="form-control" @bind-Value="oOneDepart.Observation" rows="5" />
                                </div>
   
                            </div>




                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Créé par</label>
                                </div>
                                <div class="col-sm-3">

                                    <InputSelectNumber class="form-control " @bind-Value="oOneDepart.CreatBy" Readonly=false>
                                        <option value="0"> ----------------------- </option>
                                        @if (oTCl550UserList != null)
                                        {
                                            @foreach (var item in oTCl550UserList)
                                            {
                                                <option value="@item.ID"> @item.UserName </option>
                                            }                   }
                                        }
                                        }
                                    </InputSelectNumber>

                                </div>


                                <div class="col-sm-3">
                                    <InputDate class="form-control" @bind-Value="oOneDepart.CreatOn" Readonly=true />
                                </div>

                                <div class="col-sm-2">
                                    <label class="form-text text-left">Date création</label>
                                </div>
                            </div>


                            <div class="row col-sm-12">
                                <div class="col-sm-4">
                                    <label class="form-text text-right">Modifié par</label>
                                </div>
                                <div class="col-sm-3">

                                    <InputSelectNumber class="form-control " @bind-Value="oOneDepart.LModifBy" Readonly=false>
                                        <option value="0"> ----------------------- </option>
                                        @if (oTCl550UserList != null)
                                        {
                                            @foreach (var item in oTCl550UserList)
                                            {
                                                <option value="@item.ID"> @item.UserName </option>
                                            }                   }
                                        }
                                        }
                                    </InputSelectNumber>

                                </div>

                                <div class="col-sm-3">
                                    <InputDate class="form-control" @bind-Value="oOneDepart.LModifOn" Readonly=true />
                                </div>

                                <div class="col-sm-2">
                                    <label class="form-text text-left">Date modification</label>
                                </div>
                            </div>

                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />


                        </div>
                    </EditForm>
                </div>
            </div>
            <div class="modal-footer" style="height:1px">
            </div>
        </div>
    </div>
}
}


